# Environment selection: local | dev | staging | prod
ENVIRONMENT=local

# App
APP_NAME=Sample Backend
APP_VERSION=0.1.0
DEBUG=true

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Database (use non-sensitive placeholders)
DB_NAME=sample_db
DB_USERNAME=sample_user
DB_PASSWORD=sample_password
DB_HOST=localhost
DB_PORT=5432

# Auth
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
RESET_TOKEN_EXPIRY_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenAI
OPENAI_API_KEY=

# Third-party news
API_CALL_INTERVAL_DURATION_IN_SECONDS=5
ALPHAVANTAGE_API_KEY=
ALPHAVANTAGE_API_BASE_URL=https://www.alphavantage.co
NEWS_API_KEY=
NEWS_API_BASE_URL=https://eventregistry.org/api/v1/article/getArticles
FETCH_STATIC_DATA=true

# SendGrid
SENDGRID_API_KEY=
FROM_EMAIL=noreply@example.com
SENDGRID_FORGOT_PASSWORD_TEMPLATE_ID=
SENDGRID_VERIFY_EMAIL_TEMPLATE_ID=

# Frontend
FRONTEND_URL=http://localhost:3000

# Redis
REDIS_BROKER_URL=redis://localhost:6379/0
REDIS_HOST=localhost


